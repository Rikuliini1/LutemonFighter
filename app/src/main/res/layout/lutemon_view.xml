<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivLutemonTypeImage"
        android:layout_width="0dp"
        android:layout_height="142dp"
        android:layout_weight="1"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvLutemonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LutemonName"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLutemonType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LutemonType"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvLutemonAttack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LutemonAttack"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvLutemonDefense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LutemonDefense"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvLutemonExperience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LutemonExperience"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvLutemonMaxHealth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LutemonMaxHealth"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
